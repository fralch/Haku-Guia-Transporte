verde= #009688

body
	background-color #009688
	color white
a
	color white
	text-decoration none


#transp
	display block
	margin-top 30%
	width 96px
	margin-right 35%
	margin-left 35%
	img
		width 100%
	
#titulo
	width 60%
	margin-left 20%
	text-align center
	h2
		margin-top -1em
		font-size 14px

#txt_descripcion
	margin-top 20%
	text-align center
	width 60%
	margin-left 20%
	font-size 15px

#btn_empezar
	margin-top 50px
	margin-left 35%
	a
		padding 10px 15px 10px 15px
		color verde
		background-color white
		border-radius 3px
	a:hover
		color white
		background-color verde
		border 2px solid white
		border-radius 15px
		transition border-radius 0.3s
		-webkit-transtion border-radius 0.3s

#info
	background-color white
#titulo_info
	width 100%
	background-color verde
	h1
		padding 10px 0 10px 0
		width 60%
		margin-left 20%
		margin-top 0
		font-size 20px
		text-align center


#img_info
	margin-left 10%
 
#descrip_info
	color verde
	padding-left 35px
	padding-right 35px
	padding-bottom 20px
	h1
		font-size 17px
	p
		font-size 15px

@media screen and (min-width:360px)

	#descrip_info
		padding-bottom 25%


